
<div class="container mt3">
  <h3 class="brandfont">Mis viajes:</h3>
      <% @misapp.each do |app| %>
         <div class="card-product my-4 d-flex flex-column">
            <div class= 'container'>
              <div class="card-product-infos mt-3">
                <h6>Pickup point: <%= app.pickup_point %></h6>
                <h6>Drop point: <%= app.drop_point %>
                <h6>Dia y hora de recogida: <%= app.pickup_datetime %></h6>
                <h6>Precio: <%= app.price %></h6>
                <h6>Estado: <%= app.confirmation_status %></h6>
              </div>
            </div>
           <div class="d-flex justify-content-end w-100 align-items mb-4 h-100 align-items-end">
            <div class="me-4">
              <%= link_to "Editar",   edit_application_path(app), class: "btn btn-primary" %>
            </div>

             <div class="me-4">
              <%= button_to "Eliminar", app, method: :delete, class: "btn btn-primary" %>
             </div>
             <% if app.confirmation_status == "Contraoferta" %>
                <%= button_to "Aceptar Solicitud", car_bookings_path( app.car_id, app_id: app.id ), class: "btn btn-gradient" %>
             <% end %>
             <% if app.offers.size > 0 %>
                <%= link_to "Ver ofertas", ofertapp_path( app ), class: "btn btn-gradient" %>
             <% end %>
             <% end %>
           </div>
       </div>
    <% end %>
</div>
