<div class="container mt-3">
    <h2>Todos los viajes</h2>
  <% @booking.each do |book| %>
     <div class="card-product my-4 justify-content-start">

        <div class="card-product-infos text-left ps-5">
          <p>Auto: <%= book.car_id. %></p>
          <p>Drop point: <%= book.drop_point %>
          <p>Dia y hora de recogida: <%= book.pickup_datetime %></p>
          <p>Precio: <%= book.price %></p>
        </div>
        <div class= "pe-5 ms-auto">
          <%= link_to "Aceptar viaje", car_bookings_path( book.car_id, app_id: book.id ), class: "btn btn-gradient", data: { turbo_method: "post" } %>
          <%= link_to "Ofrecer mis servicios por otro precio", offer_path(book), class: "btn btn-gradient" %>
        </div>
    </div>
  <% end %>
</div>
