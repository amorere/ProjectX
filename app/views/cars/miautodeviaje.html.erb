<div class='container d-flex flex-column align-items-center'>
  <% if @misautos.size > 0 %>
    <div class= "brandfont mt-4">
      <h1> Mis autos:</h1>
    </div>
      <p> Elegi un auto, para realizar tu viaje.</p>
        <div class="row">
          <% @misautos.each do |car| %>
          <div class= 'card-product d-flex cards'>
            <div class="row md-12">
              <div class="col-md-7">
                <%= image_tag("Traffic.webp") %>
              </div>
              <div class="col-md-4">
                <div class="card-body">
                  <h6>Model: <%= car.model %></h6>
                  <h6>Brand: <%= car.brand %>
                  <h6>Color: <%= car.color %></h6>
                  <h6>Transmission: <%= car.transmission %></h6>
                  <h6>Seguro para terceros: <%= car.insurance_other_drivers %></h6>
                </div>
              </div>
                 <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <div class="col-md-1">
                      <%= link_to "Seleccionar",   new_car_application_path(car), class: "btn btn-primary" %>
                    </div>
                  </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>

  <% else %>
    <h1>Â¡Primero sube tu auto!</h1>
    <%= link_to "Subir mi auto", new_car_path, class: "btn btn-primary" %>
  <% end %>
</div>
