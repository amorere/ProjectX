<div class='container d-flex flex-column align-items-center'>
  <div class= "brandfont mt-5">
    <h1>Agrega tu evento</h1>
  </div>
  <p>Completa el siguiente formulario.</p>
  <div class="formulario mb-5">
    <%= simple_form_for [@booking, @review] do |f| %>
      <%= f.input :rating, placeholder: "Rating", label: false , collection: [1,2,3,4,5]  %>
      <%= f.input :comment, placeholder: "Comment", label: false %>

      <%= f.submit class: "btn btn-primary form-control" %>
    <% end %>
  </div>
</div>
